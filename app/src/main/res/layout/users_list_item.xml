<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:padding="10dp"
    android:background="@color/purple_200"

    >

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="id: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_user_item_id"
        android:textStyle="bold"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/txt_user_item_id"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_user_item_id_content"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_user_item_id"
        android:id="@+id/txt_user_item_name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nnamdi"
        app:layout_constraintStart_toEndOf="@+id/txt_user_item_name"
        app:layout_constraintTop_toBottomOf="@id/txt_user_item_id"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_user_item_name_content"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Email: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_user_item_name"
        android:id="@+id/txt_user_item_email"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ncmaduji"
        app:layout_constraintStart_toEndOf="@+id/txt_user_item_email"
        app:layout_constraintTop_toBottomOf="@id/txt_user_item_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_user_item_email_content"
        />



</androidx.constraintlayout.widget.ConstraintLayout>